{
  "tags": {
    "allowUnknownTags": true
  },
  "source": {
    "include": ["./src"],
    "exclude": ["node_modules"],
    "includePattern": "\\.(jsx|js|ts|tsx)$"
  },
  "plugins": [
    "node_modules/better-docs/typescript",
    "plugins/markdown",
    "node_modules/better-docs/category"
  ],
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false,
    "search": true
  },
  "opts": {
    "template": "node_modules/better-docs",
    "readme": "README.md",
    "destination": "./docs",
    "recurse": true,
    "verbose": true
  }
}
